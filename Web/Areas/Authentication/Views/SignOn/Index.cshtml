@model Web.Areas.Authentication.Models.SignOnModel

@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

@section css
{ 
    <link href="/content/authentication.css" rel="stylesheet" type="text/css" /> 
}

@section script
{ 
    <script src="/scripts/authentication.js" type="text/javascript"></script>
}

@using(Html.BeginForm("SignOn","SignOn", FormMethod.Post, new { area = "Authentication" }))
{
    <ul>
        <li>
            <div>@Html.LabelFor(x => x.UserName)</div>
            @Html.TextBoxFor(x => x.UserName)
        </li>
        <li>
            <div>@Html.LabelFor(x => x.Password)</div>
            @Html.PasswordFor(x => x.Password)
        </li>
        <li class="noLabel">
            <input type="submit" value="Submit" />
        </li>
    </ul>
    
    
    
}

@Html.ValidationSummary()