@model Bluepill.Web.Areas.Administration.Models.SearchModel

@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

@section css
{ 
    <link href="/content/administration.search.css" rel="stylesheet" type="text/css" /> 
}

@section script
{ 
    <script src="/scripts/administration.search.interface.js" type="text/javascript"></script>
    <script src="/scripts/administration.search.js" type="text/javascript"></script>
}

<p id="matchCount">42 matches found</p>
<p id="pageCount">page 167 of 500</p>

<div id="interface">
    @using(Html.BeginForm("FindMatches","Search"))
    {
        <div id="accordion" class="small">
            @Html.EditorFor(x => x.Facets)
        </div>
        <a href="#" id="formCancel" class="button">Cancel</a>
        <a href="#" id="formSubmit" class="button">Search</a>
    }
</div>

<div id="search-controls">
        <a href="#" class="button create small">Edit Criteria</a>
        <span id="results-navigation">
            <a href="#" class="button small previous">Previous Page</a>
            <a href="#" class="button small next">Next Page</a>
            <a href="#" class="button small top">Top Page</a>
        </span>
        <a href="#" class="button small remove">Remove</a>
    </div>

