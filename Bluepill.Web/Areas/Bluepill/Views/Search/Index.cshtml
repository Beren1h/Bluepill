@model Bluepill.Web.Areas.Administration.Models.SearchModel

@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

@section css
{ 
    <link href="/content/bluepill.search.css" rel="stylesheet" type="text/css" /> 
}

@section script
{ 
    <script src="/scripts/bluepill.search.mobile.js"></script>
    <script src="/scripts/bluepill.search.js"></script>
    <script src="/scripts/jquery.mousewheel.js"></script>
    <script src="/scripts/swipe.js"></script>
}

<div class="container-fluid">

   <div class="row-fluid progress-row hide">
       <div class="span12">
            <div class="progress progress-striped active">
                <div class="bar" style="width:100%;"><span>Searching ...</span></div>
            </div>
       </div>
    </div>

    
   <div class="row-fluid criteria-row">
       <div class="span2 offset10">
           <ul class="breadcrumb">
               <li class="active">Criteria</li>
           </ul>
       </div>
   </div>

   <div class="row-fluid results-row hide">
        <div class="span2 hidden-phone">
            <span id="page-info" class="badge badge-info"></span>
        </div>
        <div class="offset8 span2">
            <ul class="breadcrumb">
                <li><a href="#" class="edit">Criteria</a><span class="divider"> / </span></li>
                <li class="active">Results<span class="divider"></span></li>
                <li class="dropdown pull-right hidden-desktop">
                <a class="dropdown-toggle mobile-match-count" data-toggle="dropdown" href="#"><span id="match">1</span><span id="match-conjuction"> of </span><span id="matches">38</span><b class="caret"></b></a>
                <ul class="dropdown-menu">
                    <li><a href="#" id="mobile-remover" data-index="0">remove</a></li>
                </ul>
                </li>
            </ul>
        </div>
   </div>

   <div class="row-fluid criteria-area">
        <div class="span6">
            <div class="accordion facet-area">
                <form>
                    @Html.HiddenFor(x => x.Page)
                    @Html.HiddenFor(x => x.PageDelta)
                    @Html.HiddenFor(x => x.TotalPages)
                    @Html.EditorFor(x => x.Facets)
                </form>
            </div>
            <div class="row-fluid actions">
                <div class="pull-left">
                    <button class="btn btn-primary btn-large btn-clear" disabled="disabled">Clear</button>
                </div>
                <div class="pull-right">
                    <button class="btn btn-primary btn-large btn-submit always-on">Submit</button>
                </div>
            </div>
        </div>
   </div>

   <div class="row-fluid match-area" data-is-mobile="@Model.IsMobile">
       <div class="matches" data-page="2" data-max="0" data-boxes="0"></div>
   </div>

</div>