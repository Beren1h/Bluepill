@model Bluepill.Web.Areas.Administration.Models.SearchModel

@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

@section css
{ 
    <link href="/content/bluepill.search.css" rel="stylesheet" type="text/css" /> 
}

@section script
{ 
    <script src="/scripts/bluepill.search.mobile.js"></script>
    <script src="/scripts/bluepill.search.js"></script>
    <script src="/scripts/jquery.mousewheel.js"></script>
    <script src="/scripts/swipe.js"></script>
}

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container-fluid">
            
            <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            <a class="brand" href="#">Bluepill</a>

            <div class="nav-collapse collapse">
                <ul class="nav pull-right">
                    <li><a href="#about">Add</a></li>
                    <li class="active"><a href="#contact">Search</a></li>
                    <li><a href="#contact">Sign Out</a></li>
                </ul>
            </div>

        </div>
    </div>
</div>

<div class="container-fluid">

   <div class="row-fluid">
        <div class="span12">
            <div class="progress progress-striped active hide">
                <div class="bar" style="width:100%;"><span>Searching ...</span></div>
            </div>
            <div class="infos hide">
                <div class="span6">
                    <span id="page-info" class="badge badge-info"></span>
                    <span id="match-info" class="badge badge-info"></span>
                    <button class="btn btn-primary edit">edit search</button>
                </div>
                <div class="offset6"></div>
            </div>
        </div>
    </div>



    <div class="row-fluid criteria-area">
        <div class="offset3"></div>
        <div class="span6">
            <div class="accordion facet-area">
                <form>
                    @Html.HiddenFor(x => x.Page)
                    @Html.HiddenFor(x => x.PageDelta)
                    @Html.HiddenFor(x => x.TotalPages)
                    @Html.EditorFor(x => x.Facets)
                </form>
            </div>
            <div class="row-fluid actions">
                <div class="pull-left">
                    <button class="btn btn-primary btn-large btn-clear" disabled="disabled">Clear</button>
                </div>
                <div class="pull-right">
                    <button class="btn btn-primary btn-large btn-submit">Submit</button>
                </div>
            </div>
        </div>
        <div class="offset3"></div>
    </div>


    <div class="row-fluid match-area" data-is-mobile="@Model.IsMobile">
        <div class="matches" data-page="2" data-max="0" data-boxes="0"></div>
    </div>


</div>






