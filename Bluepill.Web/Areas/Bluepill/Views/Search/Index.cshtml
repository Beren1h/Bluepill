@model Bluepill.Web.Areas.Administration.Models.SearchModel

@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

@section css
{ 
    <link href="/content/bluepill.search.css" rel="stylesheet" type="text/css" /> 
}

@section script
{ 
    <script src="/scripts/application.search.interface.js" type="text/javascript"></script>
    <script src="/scripts/bluepill.search.js" type="text/javascript"></script>
    <script src="/scripts/jquery.mousewheel.js" type="text/javascript"></script>
}


<p id="pageCount">page <span id="currentPage">167</span> of <span id="maxPage">500</span></p>
<p id="matchCount"><span id="boxes">42</span> matches found</p>

<div id="interface">
    @using(Html.BeginForm("FindMatches", "Search", FormMethod.Post, new {id="searchForm"}))
    {
        @Html.HiddenFor(x => x.Page)
        @Html.HiddenFor(x => x.PageDelta)
        @Html.HiddenFor(x => x.TotalPages)
        <div id="accordion" class="small">
            @Html.EditorFor(x => x.Facets)
        </div>
        <a href="#" id="formCancel" class="button">Cancel</a>
        <a href="#" id="formSubmit" class="button">Search</a>
    }
</div>


<div id="search-controls">
        <a href="#" class="button remove small right-align">Remove</a>
        <a href="#" class="button create small">Edit Criteria</a>
    </div>

<div id="display-area">
    <div id="results" data-page="2" data-max="0" data-boxes="0">
    </div>
</div>

