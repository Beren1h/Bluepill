@model Bluepill.Web.Areas.Administration.Models.SearchModel

@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

@section css
{ 
    <link href="/content/bluepill.search.css" rel="stylesheet" type="text/css" /> 
}

@section script
{ 
    <script src="/scripts/application.search.interface.js" type="text/javascript"></script>
    <script src="/scripts/bluepill.search.js" type="text/javascript"></script>
    <script src="/scripts/jquery.mousewheel.js" type="text/javascript"></script>
}


<div class="span12 heading">
    <div class="trash">
        <ul class="pull-left">
            @*<li><h2>page <span id="currentPage">167</span> of <span id="maxPage">500</span></h2></li>*@
            <li><h2>Page <span id="currentPage">167</span></h2></li>
            <li><span id="boxes">42</span> matches  -  <span id="maxPage">500</span> pages</li>
        </ul>
        <ul class="pull-right small-font single-line">
            <li><a href="#" class="button edit">Edit Search</a></li>
        </ul>
    </div>

</div>

<div class="span12 interface">
     @using(Html.BeginForm("FindMatches", "Search", FormMethod.Post, new {id="searchForm"}))
     {
        @Html.HiddenFor(x => x.Page)
        @Html.HiddenFor(x => x.PageDelta)
        @Html.HiddenFor(x => x.TotalPages)
        <div id="accordion">
            @Html.EditorFor(x => x.Facets)
        </div>
        <ul class="pull-right single-line">
            <li><a href="#" class="button cancel">Cancel</a></li>
            <li><a href="#" class="button submit">Search</a></li>
        </ul>
     }
</div>


<div class="span12 height14 match-area">
    <div class="matches" data-page="2" data-max="0" data-boxes="0"></div>
</div>


