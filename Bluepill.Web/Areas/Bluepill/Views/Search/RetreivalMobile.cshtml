@model Bluepill.Web.Areas.Administration.Models.SearchModel

@{ Layout = null; }

<div class="matches" data-page="@Model.Page" data-max="@Model.TotalPages" data-boxes="@Model.TotalBoxes"></div>

    <div id="slider" class="swipe">
        <div class="swipe-wrap">

            @if (Model.Page != 1)
            {
                <div class="frame">
                    <div class="match" data-load="down">
                        <h3>loading down</h3>
                    </div>
                </div>
            }

            @for (int i = 0; i <= Model.MaxIndex; i++)
            {
                <div class="frame">
                    <div class="match">
                        <a  href="~/application/picture/getpicturebytes?index=@i" target="_blank">
                            <img src="~/application/picture/getpicturereducedbytes?index=@i" />
                        </a>
                    </div>
                    <h1 class="z"></h1>

                </div>
            }

            @if (Model.Page < Model.TotalPages)
            {
                <div class="frame">
                    <div class="match" data-load="up">
                        <h3>loading up</h3>
                    </div>
                </div>
            }


        </div>
    </div>

