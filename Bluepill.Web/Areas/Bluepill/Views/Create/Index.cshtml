@model Bluepill.Web.Areas.Administration.Models.CreateModel

@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

@section css
{ 
    <link href="/content/bluepill.create.css" rel="stylesheet" type="text/css" /> 
}

@section script
{ 
    <script src="/scripts/application.search.interface.js" type="text/javascript"></script>
    <script src="/scripts/bluepill.create.js" type="text/javascript"></script>
}

<div class="span12 heading" data-total="@Model.TotalFileCount">
     <h2>
         <img src="\content\images\new-image-loading.gif" />
         <span>loading</span>
     </h2>
</div>

@if(Model.TotalFileCount == 0)
{
    <div class="span12 height12"></div>
}
else
{
    <div class="span6 facets">
        <form>
            @Html.HiddenFor(x => x.Url)
            @Html.HiddenFor(x => x.File)
            <div class="facets-area hide">
                @Html.EditorFor(x => x.Facets)
            </div>
            <a href="#" class="submit">save</a>
        </form>
    </div>

    <div class="span6 height12 add">
        <a id="input" href="@Model.Url" target="_blank">
            <img src="/application/picture/GetResizePicture?file=@Model.Url&height=@Model.ResizedHeight&width=@Model.ResizedWidth" alt="" />
        </a>
    </div>
}