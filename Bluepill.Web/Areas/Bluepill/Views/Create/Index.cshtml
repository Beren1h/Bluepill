@model Bluepill.Web.Areas.Administration.Models.CreateModel

@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
    Bundles.Reference("js"); 
    Bundles.Reference("createJs");
 }

<div class="container-fluid loading" data-file-total="@Model.TotalFileCount">
    <div class="row-fluid">
        <div class="span12">
            <div class="progress progress-striped active">
                <div class="bar" style="width:100%;"><span>Loading ...</span></div>
            </div>
            <div>
                <span class="badge badge-info hide">@Model.TotalFileCount files</span>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid content hide">
    <div class="row-fluid">

        <div class="add span5">
            
            <div class="row-fluid">
                <a class="pull-right" id="input" href="@Model.Url" target="_blank">
                    <img src="/application/picture/GetResizePicture?file=@Model.Url&height=@Model.ResizedHeight&width=@Model.ResizedWidth" alt="" />
                </a>
            </div>

        </div>

        <div class="span7">
                        
            <div class="row-fluid visible-phone actions">
                <div class="inner pull-left">
                    <button class="btn btn-primary btn-large btn-clear" disabled="disabled">Clear</button>
                </div>
                <div class="inner pull-right">
                    <button class="btn btn-primary btn-large btn-submit" disabled="disabled">Submit</button>
                </div>
            </div>

            <div class="row-fluid">
                <div class="accordion facet-area">
                     <form>
                        @Html.HiddenFor(x => x.Url)
                        @Html.HiddenFor(x => x.File)
                        @Html.EditorFor(x => x.Facets)
                    </form>
                </div>
            </div>

            <div class="row-fluid visible-desktop actions">
                <div class="pull-left">
                    <button class="btn btn-primary btn-large btn-clear" disabled="disabled">Clear</button>
                </div>
                <div class="pull-right">
                    <button class="btn btn-primary btn-large btn-submit" disabled="disabled">Submit</button>
                </div>
            </div>

        </div>
        
    </div>

</div>

