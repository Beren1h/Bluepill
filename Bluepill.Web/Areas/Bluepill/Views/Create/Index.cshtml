@model Bluepill.Web.Areas.Administration.Models.CreateModel

@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

@section css
{ 
    <link href="/content/bluepill.create.css" rel="stylesheet" type="text/css" /> 
}

@section script
{ 
    <script src="/scripts/application.search.interface.js" type="text/javascript"></script>
    <script src="/scripts/bluepill.create.js" type="text/javascript"></script>
}

<div class="span12 heading">
 <h2>
     <img src="\content\images\new-image-loading.gif" />
     <span>loading</span>
 </h2>

</div>
<div class="span8">

    @using (Html.BeginForm("Save", "Create", FormMethod.Post, new { id = "test" }))
    {
        @Html.HiddenFor(x => x.File)
        <div class="search-interface">
            
            <ul>
                <li><a href="#"class="button submit">Save</a></li>
                @foreach (var facet in Model.Facets)
                {
                    @Html.Partial("Facet", facet)
                }
            </ul>
        </div>
    }

</div>

<div class="span4 height12 add">
    <a id="input" href="/application/picture/GetPicture?file=@Model.File" target="_blank">
        <img src="/application/picture/GetResizePicture?file=@Model.File&height=@Model.ResizedHeight&width=@Model.ResizedWidth" data-total="@Model.TotalFileCount" alt="" />
    </a>
</div>
