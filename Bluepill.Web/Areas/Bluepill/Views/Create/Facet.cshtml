@model Bluepill.Search.Facet

    <li>
        <input type="checkbox" id="@Model.Value" />
        <label for="@Model.Value">@Model.Name</label>
    </li>
    @if (Model.Children.Count() > 0)
    {
        <li>
            <div class="@Model.Value children-container" data-checkbox="@Model.Value">

                    <ul class="@Model.Value plus-minus">
                        <li><a href="#">-</a></li>
                    </ul>
                        @foreach(var facet in Model.Children)
                        {
                            <ul class="@Model.Value children" data-checkbox="@Model.Value">
                                @Html.Partial("Facet", facet)
                            </ul>
                        }
            </div>
        </li>
    }    