    <link href="/content/jquery.mobile-1.3.0.css" rel="stylesheet" type="text/css" />
    @if (IsSectionDefined("css"))
    {
        @RenderSection("css")
    }
    
    <script src="/scripts/jquery-1.8.1.min.js" type="text/javascript"></script>
    <script src="/scripts/jquery.mobile-1.3.0.js" type="text/javascript"></script>

